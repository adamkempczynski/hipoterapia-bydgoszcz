---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description } = Astro.props;
const defaultDescription = "Profesjonalna hipoterapia w Bydgoszczy. Terapia z udziałem koni dla dzieci i dorosłych z niepełnosprawnościami. Bydgoskie Towarzystwo Hipoterapii i Psychoterapii.";
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description || defaultDescription} />
		<meta name="keywords" content="hipoterapia, Bydgoszcz, terapia, konie, rehabilitacja, niepełnosprawność, dzieci, dorośli" />
		<meta name="author" content="Bydgoskie Towarzystwo Hipoterapii i Psychoterapii" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://hipoterapia.bydgoszcz.pl/" />
		<meta property="og:title" content={`${title} | Hipoterapia Bydgoszcz`} />
		<meta property="og:description" content={description || defaultDescription} />
		<meta property="og:image" content="/uploads/index_na_koniu.webp" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://hipoterapia.bydgoszcz.pl/" />
		<meta property="twitter:title" content={`${title} | Hipoterapia Bydgoszcz`} />
		<meta property="twitter:description" content={description || defaultDescription} />
		<meta property="twitter:image" content="/uploads/index_na_koniu.webp" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={`https://hipoterapia.bydgoszcz.pl${Astro.url.pathname}`} />

		<title>{title} | Hipoterapia Bydgoszcz</title>

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
	</head>
	<body class="min-h-screen bg-gray-50 flex flex-col">
		<Navigation />

		<main class="flex-1">
			<slot />
		</main>

		<Footer />

		<script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>
		<script type="text/javascript">
			document.addEventListener('DOMContentLoaded', function() {
				const lightbox = GLightbox({
					touchNavigation: true,
					loop: true,
					autoplayVideos: true,
					keyboardNavigation: true,
					closeOnOutsideClick: true,
					selector: '.glightbox'
				});
			});
		</script>

		<!-- Netlify Identity Widget for CMS authentication -->
		<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
		<script>
			if (window.netlifyIdentity) {
				window.netlifyIdentity.on("init", user => {
					if (!user) {
						window.netlifyIdentity.on("login", () => {
							document.location.href = "/admin/";
						});
					}
				});
			}
		</script>
	</body>
</html>