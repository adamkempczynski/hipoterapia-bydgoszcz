---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import StructuredData from '../components/StructuredData.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
const defaultDescription = "Profesjonalna hipoterapia w Bydgoszczy od 1995 roku. Terapia z udziałem koni dla dzieci i dorosłych z niepełnosprawnościami - autyzm, mózgowe porażenie dziecięce, zespół Downa, wady postawy. Organizacja Pożytku Publicznego.";
const defaultOgImage = "/uploads/index_na_koniu.webp";
const ogImageUrl = ogImage || defaultOgImage;
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description || defaultDescription} />
		<meta name="keywords" content="hipoterapia Bydgoszcz, terapia z końmi Bydgoszcz, rehabilitacja dzieci z autyzmem, hipoterapia dla dzieci z mózgowym porażeniem dziecięcym, terapia zajęciowa z końmi, organizacja pożytku publicznego Bydgoszcz, hipoterapia zespół Downa, zajęcia rehabilitacyjne z końmi, ośrodek jeździecki Jarużyn, niepełnosprawność dzieci terapia" />
		<meta name="author" content="Bydgoskie Towarzystwo Hipoterapii i Psychoterapii" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={`https://nowa.hipoterapia.bydgoszcz.pl${Astro.url.pathname}`} />
		<meta property="og:title" content={`${title} | Hipoterapia Bydgoszcz`} />
		<meta property="og:description" content={description || defaultDescription} />
		<meta property="og:image" content={ogImageUrl} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={`https://nowa.hipoterapia.bydgoszcz.pl${Astro.url.pathname}`} />
		<meta property="twitter:title" content={`${title} | Hipoterapia Bydgoszcz`} />
		<meta property="twitter:description" content={description || defaultDescription} />
		<meta property="twitter:image" content={ogImageUrl} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={`https://nowa.hipoterapia.bydgoszcz.pl${Astro.url.pathname}`} />

		<!-- Fonts with font-display:swap for better performance -->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" />
		<link rel="stylesheet" href="https://api.fontshare.com/v2/css?f=cal-sans@1&display=swap" />

		<title>{title} | Hipoterapia Bydgoszcz</title>

		<!-- Structured Data for SEO -->
		<StructuredData />

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
	</head>
	<body class="min-h-screen bg-gray-50 flex flex-col">
		<Navigation />

		<main class="flex-1">
			<slot />
		</main>

		<Footer />

		<script is:inline src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js" defer></script>
		<script type="text/javascript">
			document.addEventListener('DOMContentLoaded', function() {
				const lightbox = GLightbox({
					touchNavigation: true,
					loop: true,
					autoplayVideos: true,
					keyboardNavigation: true,
					closeOnOutsideClick: true,
					selector: '.glightbox'
				});
			});
		</script>

		<!-- Netlify Identity Widget for CMS authentication -->
		<script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
		<script is:inline>
			if (window.netlifyIdentity) {
				window.netlifyIdentity.on("init", user => {
					if (!user) {
						window.netlifyIdentity.on("login", () => {
							document.location.href = "/admin/";
						});
					}
				});

				// Handle invite and recovery tokens from URL hash
				window.netlifyIdentity.on("init", user => {
					const hash = window.location.hash;
					if (hash && (hash.includes('invite_token=') || hash.includes('recovery_token='))) {
						window.netlifyIdentity.open();
					}
				});

				// Redirect to admin after signup/recovery
				window.netlifyIdentity.on("signup", () => {
					window.netlifyIdentity.close();
					document.location.href = "/admin/";
				});

				window.netlifyIdentity.on("passwordRecovery", () => {
					window.netlifyIdentity.close();
					document.location.href = "/admin/";
				});
			}
		</script>
	</body>
</html>