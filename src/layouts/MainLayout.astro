---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Profesjonalna hipoterapia w Bydgoszczy. Terapia z udziałem koni dla dzieci i dorosłych." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Montserrat:wght@700&display=swap" rel="stylesheet">
		
		<title>{title} | Hipoterapia Bydgoszcz</title>

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
	</head>
	<body>
		<header>
			<nav>
				<a href="/">Strona Główna</a>
				<a href="/oferta/">Oferta</a>
				<a href="/o-hipoterapii/">O Hipoterapii</a>
				<a href="/galeria/">Galeria</a>
				<a href="/towarzystwo/">Towarzystwo</a>
				<a href="/standardy-ochrony-maloletnich/">Standardy</a>
				<a href="/kontakt/">Kontakt</a>
				<a href="/linki/">Linki</a>
			</nav>
		</header>
		<main>
			<h1>{title}</h1>
			<slot />
		</main>
		<footer>
			<p>&copy; {new Date().getFullYear()} Hipoterapia Bydgoszcz. Wszelkie prawa zastrzeżone.</p>
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>
		<script type="text/javascript">
			const lightbox = GLightbox({
				touchNavigation: true,
				loop: true,
				autoplayVideos: true
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		--primary-color: #386641;
		--secondary-color: #a7c957;
		--bg-color: #f2e8cf;
		--text-color: #3a3a3a;
		--light-gray: #e6e6e6;
		--font-heading: 'Montserrat', sans-serif;
		--font-body: 'Lato', sans-serif;
	}

	*, *::before, *::after {
		box-sizing: border-box;
	}

	body {
		font-family: var(--font-body);
		line-height: 1.7;
		margin: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		color: var(--text-color);
		background-color: var(--bg-color);
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-heading);
		color: var(--primary-color);
		font-weight: 700;
	}

	header, footer {
		padding: 1.5rem 1rem;
		background-color: white;
		box-shadow: 0 2px 5px rgba(0,0,0,0.05);
	}

	main {
		flex-grow: 1;
		width: 100%;
		max-width: 900px;
		margin: 2.5rem auto;
		padding: 0 1.5rem;
	}

	header {
		display: flex;
		justify-content: center;
		align-items: center;
		border-bottom: 4px solid var(--primary-color);
	}
    nav {
		display: flex;
        justify-content: center;
        flex-wrap: wrap;
		gap: 0.5rem 1.5rem;
    }
	nav a {
		text-decoration: none;
		color: var(--primary-color);
		font-weight: 700;
        padding: 0.5rem;
		border-radius: 6px;
		transition: all 0.2s ease-in-out;
	}
    nav a:hover {
        background-color: var(--secondary-color);
		color: white;
    }

	footer {
		text-align: center;
		margin-top: 3rem;
		background-color: var(--primary-color);
		color: white;
		font-size: 0.9rem;
	}

	.post-preview {
		background-color: white;
		border: 1px solid var(--light-gray);
		border-left: 5px solid var(--secondary-color);
		box-shadow: 0 2px 8px rgba(0,0,0,0.07);
		border-radius: 8px;
	}
</style>