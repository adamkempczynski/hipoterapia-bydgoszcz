---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Profesjonalna hipoterapia w Bydgoszczy. Terapia z udziałem koni dla dzieci i dorosłych." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} | Hipoterapia Bydgoszcz</title>
	</head>
	<body>
		<header>
			<nav>
				<a href="/">Strona Główna</a>
				<a href="/oferta/">Oferta</a>
				<a href="/o-hipoterapii/">O Hipoterapii</a>
				<a href="/galeria/">Galeria</a>
				<a href="/towarzystwo/">Towarzystwo</a>
				<a href="/standardy-ochrony-maloletnich/">Standardy</a>
				<a href="/kontakt/">Kontakt</a>
				<a href="/linki/">Linki</a>
			</nav>
		</header>
		<main>
			<h1>{title}</h1>
			<slot /> </main>
		<footer>
			<p>&copy; {new Date().getFullYear()} Hipoterapia Bydgoszcz. Wszelkie prawa zastrzeżone.</p>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--primary-color: #4a7c00;
		--secondary-color: #f1f1f1;
		--text-color: #333;
	}
	body {
		font-family: sans-serif;
		line-height: 1.6;
		margin: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		color: var(--text-color);
	}
	main {
		flex-grow: 1;
		width: 100%;
		max-width: 800px;
		margin: 2rem auto;
		padding: 0 1rem;
	}
	header {
		background-color: var(--secondary-color);
		padding: 1rem 0;
		border-bottom: 3px solid var(--primary-color);
	}
    nav {
        max-width: 800px;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
    }
	nav a {
		margin: 0 1rem;
		text-decoration: none;
		color: var(--primary-color);
		font-weight: bold;
        padding: 0.5rem;
	}
    nav a:hover {
        text-decoration: underline;
    }
	footer {
		background-color: var(--secondary-color);
		padding: 1rem;
		text-align: center;
        margin-top: 2rem;
	}
    h1, h2, h3 {
        color: var(--primary-color);
    }
</style>