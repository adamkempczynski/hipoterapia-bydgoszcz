---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('aktualnosci');

  // Zbieramy wszystkie lata z postów
  const years = [...new Set(posts.map(post => post.data.pubDate.getFullYear()))]
    .sort((a, b) => b - a);

  return years.map(year => ({
    params: { year: year.toString() },
    props: {
      year,
      posts: posts.filter(post => post.data.pubDate.getFullYear() === year)
        .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
    }
  }));
}

const { year, posts } = Astro.props;

const categories = {
  'biwaki-wycieczki': 'Biwaki i wycieczki',
  'wydarzenia-sportowe': 'Wydarzenia sportowe',
  'zebrania-organizacyjne': 'Zebrania i sprawy organizacyjne',
  'wydarzenia-spoleczne': 'Wydarzenia społeczne',
  'programy-dotacyjne': 'Programy dotacyjne'
};

// Grupowanie postów według miesięcy
const postsByMonth = posts.reduce((acc, post) => {
  const month = post.data.pubDate.getMonth();
  if (!acc[month]) {
    acc[month] = [];
  }
  acc[month].push(post);
  return acc;
}, {} as Record<number, typeof posts>);

const monthNames = [
  'Styczeń', 'Luty', 'Marzec', 'Kwiecień', 'Maj', 'Czerwiec',
  'Lipiec', 'Sierpień', 'Wrzesień', 'Październik', 'Listopad', 'Grudzień'
];
---

<MainLayout title={`Aktualności ${year}`}>
  <section class="py-12 bg-gradient-to-r from-primary-600 to-primary-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Aktualności z <span class="text-primary-200">{year}</span> roku
      </h1>
      <p class="text-xl text-primary-100 max-w-3xl mx-auto">
        Wszystkie wydarzenia i aktualności z {year} roku ({posts.length} {posts.length === 1 ? 'wpis' : posts.length < 5 ? 'wpisy' : 'wpisów'})
      </p>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
    <a href="/aktualnosci/" class="inline-flex items-center px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Wszystkie aktualności
    </a>
    <div class="flex flex-wrap gap-2">
      {Object.entries(categories).map(([key, name]) => {
        const categoryPosts = posts.filter(post => post.data.category === key);
        return categoryPosts.length > 0 ? (
          <a href={`/aktualnosci/kategoria/${key}/`} class="inline-flex items-center px-3 py-1 bg-primary-100 text-primary-800 text-sm font-medium rounded-full hover:bg-primary-200 transition-colors">
            {name} ({categoryPosts.length})
          </a>
        ) : null;
      })}
    </div>
  </div>

  <div class="space-y-8">
    {Object.keys(postsByMonth)
      .map(month => parseInt(month))
      .sort((a, b) => b - a)
      .map(month => (
        <section class="card p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            {monthNames[month]} {year}
          </h2>
          <div class="space-y-6">
            {postsByMonth[month].map(post => (
              <article class="group border-l-4 border-primary-200 hover:border-primary-500 bg-gray-50 hover:bg-white rounded-r-lg p-6 transition-all duration-300 hover:shadow-md">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                  <div class="flex-1">
                    <h3 class="text-xl font-semibold text-gray-900 group-hover:text-primary-700 transition-colors mb-2">
                      <a href={`/aktualnosci/wpis/${post.slug}/`} class="text-decoration-none">{post.data.title}</a>
                    </h3>
                    <div class="flex flex-wrap items-center gap-4 mb-3">
                      <time class="text-sm text-gray-500 flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        {post.data.pubDate.toLocaleDateString('pl-PL', {
                          day: 'numeric',
                          month: 'long',
                          year: 'numeric'
                        })}
                      </time>
                      {post.data.category && (
                        <span class="inline-flex items-center px-3 py-1 bg-primary-100 text-primary-800 text-sm font-medium rounded-full">
                          {categories[post.data.category]}
                        </span>
                      )}
                    </div>
                    {post.data.description && (
                      <p class="text-gray-600 line-clamp-2">{post.data.description}</p>
                    )}
                  </div>
                  <div class="flex-shrink-0">
                    <a
                      href={`/aktualnosci/wpis/${post.slug}/`}
                      class="inline-flex items-center px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors"
                    >
                      Czytaj
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>
      ))}
  </div>

  {posts.length === 0 && (
    <div class="card p-8 text-center">
      <p class="text-gray-600 mb-4">Brak aktualności z {year} roku.</p>
      <a href="/aktualnosci/" class="inline-flex items-center px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Powrót do wszystkich aktualności
      </a>
    </div>
  )}
  </div>
</MainLayout>