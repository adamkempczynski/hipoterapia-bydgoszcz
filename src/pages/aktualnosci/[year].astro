    font-weight: 600;
    margin: 0;
  }

  .no-posts {
    text-align: center;
    background-color: white;
    padding: 3rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.07);
  }

  @media (max-width: 768px) {
    .navigation-links {
      flex-direction: column;
      align-items: stretch;
    }

    .category-filters {
      justify-content: center;
    }

    .year-header, .posts-grid, .no-posts {
      padding: 1rem;
    }
  }
</style>