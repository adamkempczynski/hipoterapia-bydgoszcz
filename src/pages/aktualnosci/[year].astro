---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('aktualnosci');

  // Zbieramy wszystkie lata z post√≥w
  const years = [...new Set(posts.map(post => post.data.pubDate.getFullYear()))]
    .sort((a, b) => b - a);

  return years.map(year => ({
    params: { year: year.toString() },
    props: {
      year,
      posts: posts.filter(post => post.data.pubDate.getFullYear() === year)
        .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
    }
  }));
}

const { year, posts } = Astro.props;

const categories = {
  'biwaki-wycieczki': 'Biwaki i wycieczki',
  'wydarzenia-sportowe': 'Wydarzenia sportowe',
  'zebrania-organizacyjne': 'Zebrania i sprawy organizacyjne',
  'wydarzenia-spoleczne': 'Wydarzenia spo≈Çeczne',
  'programy-dotacyjne': 'Programy dotacyjne'
};

// Grupowanie post√≥w wed≈Çug miesiƒôcy
const postsByMonth = posts.reduce((acc, post) => {
  const month = post.data.pubDate.getMonth();
  if (!acc[month]) {
    acc[month] = [];
  }
  acc[month].push(post);
  return acc;
}, {} as Record<number, typeof posts>);

const monthNames = [
  'Stycze≈Ñ', 'Luty', 'Marzec', 'Kwiecie≈Ñ', 'Maj', 'Czerwiec',
  'Lipiec', 'Sierpie≈Ñ', 'Wrzesie≈Ñ', 'Pa≈∫dziernik', 'Listopad', 'Grudzie≈Ñ'
];
---

<MainLayout title={`Aktualno≈õci ${year}`}>
  <div class="year-header">
    <h1>Aktualno≈õci z {year} roku</h1>
    <p>Wszystkie wydarzenia i aktualno≈õci z {year} roku ({posts.length} {posts.length === 1 ? 'wpis' : posts.length < 5 ? 'wpisy' : 'wpis√≥w'})</p>
  </div>

  <div class="navigation-links">
    <a href="/aktualnosci/" class="nav-link">‚Üê Wszystkie aktualno≈õci</a>
    <div class="category-filters">
      {Object.entries(categories).map(([key, name]) => {
        const categoryPosts = posts.filter(post => post.data.category === key);
        return categoryPosts.length > 0 ? (
          <a href={`/aktualnosci/kategoria/${key}/`} class="category-filter">
            {name} ({categoryPosts.length})
          </a>
        ) : null;
      })}
    </div>
  </div>

  <div class="posts-timeline">
    {Object.keys(postsByMonth)
      .map(month => parseInt(month))
      .sort((a, b) => b - a)
      .map(month => (
        <section class="month-section">
          <h2 class="month-header">{monthNames[month]} {year}</h2>
          <div class="posts-grid">
            {postsByMonth[month].map(post => (
              <article class="post-card">
                <header class="post-card-header">
                  <h3>
                    <a href={`/aktualnosci/wpis/${post.slug}/`}>{post.data.title}</a>
                  </h3>
                  <div class="post-card-meta">
                    <time>{post.data.pubDate.toLocaleDateString('pl-PL')}</time>
                    {post.data.category && (
                      <span class="category-badge">{categories[post.data.category]}</span>
                    )}
                  </div>
                </header>
                {post.data.description && (
                  <p class="post-card-description">{post.data.description}</p>
                )}
                {post.data.gallery && post.data.gallery.length > 0 && (
                  <div class="post-card-gallery-info">
                    üì∏ Galeria ({post.data.gallery.length} zdjƒôƒá)
                  </div>
                )}
              </article>
            ))}
          </div>
        </section>
      ))}
  </div>

  {posts.length === 0 && (
    <div class="no-posts">
      <p>Brak aktualno≈õci z {year} roku.</p>
      <a href="/aktualnosci/" class="nav-link">‚Üê Powr√≥t do wszystkich aktualno≈õci</a>
    </div>
  )}
</MainLayout>

<style>
