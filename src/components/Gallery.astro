---
interface Props {
  imagePaths: string[];
}

const { imagePaths } = Astro.props;
---

<div class="photo-gallery">
  {imagePaths.map((path) => (
    <a href={path} class="glightbox" data-gallery="gallery-biwak">
      <img src={path} alt="Zdjęcie z galerii" loading="lazy" />
    </a>
  ))}
</div>

<style>
  .photo-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }

  .photo-gallery a {
    display: block;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }

  .photo-gallery a:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 15px rgba(0,0,0,0.15);
  }

  .photo-gallery img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Gwarantuje, że obrazki wypełnią kwadrat */
    aspect-ratio: 1 / 1; /* Tworzy kwadratowe miniatury */
  }
</style>